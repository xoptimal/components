    api.service.atomParser = new AtomAssetsParser({
      entryFile: api.config.resolve.entryFile,
      resolveDir: api.cwd,
      unpkgHost: api.config.apiParser.unpkgHost,
      resolveFilter: api.config.apiParser.resolveFilter
    });
